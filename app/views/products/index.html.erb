<div class="container text-center">
  <div class="row justify-content-md-center">
    <div class="col-6">
      <h1>Products</h1>
      <table class="table align-middle">
        <thead>
        <tr>
          <th scope="col">Product code</th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th colspan="3"></th>
        </tr>
        </thead>
        <tbody>
        <% @products.each do |product| %>
          <tr>
            <td class="fw-bold"><%= product.product_code %></td>
            <td><%= product.name %></td>
            <td><%= format_price(product.price) %></td>
            <td><%= link_to 'Show', product, class: "btn btn-primary btn-sm"%></td>
            <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-primary btn-sm" %></td>
            <td><%= button_to 'Destroy', product, method: :delete, class: "btn btn-danger btn-sm" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <br>
      <%= link_to 'New Product', new_product_path, class: "btn btn-primary btn-sm" %> |
      <%= link_to 'Home', root_path, class: "btn btn-primary btn-sm" %>
    </div>
  </div>
</div>